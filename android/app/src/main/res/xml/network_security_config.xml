<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Configuración de seguridad de red para Joinify
        
        IMPORTANTE: Esta configuración permite HTTP (no seguro) para desarrollo.
        En PRODUCCIÓN, debes usar solo HTTPS y eliminar cleartextTrafficPermitted.
    -->
    
    <!-- Permite tráfico HTTP sin cifrar (cleartext) para desarrollo -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Confiar en certificados del sistema (para HTTPS) -->
            <certificates src="system" />
            <!-- Confiar en certificados de usuario (útil para debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- 
        Dominios específicos para desarrollo local
        Esto permite conectarse a localhost, 10.0.2.2 (emulador), y tu red local
    -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.1.100</domain>
        <!-- Agrega tu IP local si es diferente -->
    </domain-config>
</network-security-config>
